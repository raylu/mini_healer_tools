{% extends 'base.jinja2' %}

{% block body %}
<header class="build"></header>

<main class="build">
	<div class="tree"></div>
	<div class="info"></div>
	<div class="items">
		<div id="selected_items"></div>
		<form id="search">
			<input type="text" name="q" autocomplete="off" placeholder="search">
			<div id="results"></div>
		</form>
		<div id="pending_item"></div>
	</div>
</main>

<form id="build" action="/build/export" method="post" enctype="text/plain">
	<input type="button" value="reset" id="reset">
	<input type="submit" value="export image">
</form>

<script src="https://cdn.jsdelivr.net/npm/@jsonurl/jsonurl@1.1.6/dist/jsonurl.min.js"
	integrity="sha256-4+ssSqCkuDc9UPEY8zOLzzBuY8QnbZdhrqbIDfYlsCY=" crossorigin="anonymous"></script>
<script src="/static/artifacts.js"></script>
<script src="/static/build.js"></script>
{% endblock body %}
